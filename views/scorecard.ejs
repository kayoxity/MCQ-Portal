    <h1>View your scorecard</h1>
    <form>
        <div class="form-group">
          <input type="text" class="form-control" id="search" placeholder="Enter test name">
          <small class="form-text text-muted">Enter the name of the test whose score you want to view.</small>
        </div>
        <button type="button" class="btn btn-primary" onclick="loadDoc()"">Ok</button>
    </form>

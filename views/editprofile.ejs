<% include partials/header %>
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/home.css">
<body>

<% include partials/navbar %>



<div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbarr-nav">
      <li class="nav-item">
        <a class="nav-link" href="/profile">
          <i class="fas fa-fw fa-user-circle"></i>
          <span>Profile</span>
        </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/editprofile">
          <i class="fas fa-fw fa-user-edit"></i>
          <span>Edit Profile</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/scorecard">
          <i class="fas fa-fw fa-table"></i>
          <span>View Scorecard</span></a>
      </li>
    </ul>

    <!-- Side navbar finished -->

    <div id="content-wrapper">
      <div style="padding-left:50px;padding-right: 50px;" class="container">
        <div class="row">
          <h1 id="name">Welcome <%=name.charAt(0).toUpperCase() + name.slice(1)%></h1>
        </div>


   
        <form action="/editprofile" method="POST">
          <div class="form-row">
              <div class="form-group col">
                <label class="font-changed" for="username">NAme</label>
                <input type="text" class="form-control raleway" id="username" placeholder="Username" name="username" value=<%= name %>>
              </div>
              
          </div>
          <div class="form-row">
              <div class="form-group col">
                <label class="font-changed" for="email">EmAil Address</label>
                <input type="email" class="form-control raleway" id="email" placeholder="Email address" name="email" value=<%= email %>>
              </div>
              <div class="form-group col">
                <label class="font-changed" for="roll">Roll Number</label>
                <input type="text" class="form-control raleway" id="roll" placeholder="Roll number" name="roll" value=<%= roll %>>
              </div>
          </div>
          <div class="form-row">
              <!-- <div class="form-group col">
                <label for="gender">Gender</label>
                <input type="text" class="form-control" id="gender" placeholder="Gender" name="gender" value=<%= gender %>>
              </div> -->
              <div class="col">
                  <label class="font-changed">Gender</label>
                  <select class="form-control form-control-sm  raleway" name="gender">
                      <option value="male">Male</option>
                      <option value="female">Female</option>
                  </select>
              </div>
              <div class="form-group col">
                <label class="font-changed" for="college">College nAme</label>
                <input type="text" class="form-control raleway" id="college" placeholder="College name" name="college" value=<%=college%>>
              </div>
          </div>
          <br>
          <div class="form-row text-center">
              <div class="col">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            </div>
      </form>

        
         
          </div>
          
      </div>
      
  </div>
</div>


<% include partials/footer %>
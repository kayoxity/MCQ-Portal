                        <%= test.questions[i].op3 %>
                    </label>
            </div>
            <div class="col">
                <input class="form-check-input" type="radio" name="answeroption" id="op4" value="op4">
                    <label class="form-check-label" for="op4">
                        <%= test.questions[i].ans %>
                    </label>
            </div>
        </div>
        <button type="button" onclick="checkAnswer(<%= test.questions[i].ans %>)">Click me</button>
    </form>

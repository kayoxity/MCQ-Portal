<% include partials/header %>
<link rel="stylesheet" href="/css/sidebar.css">
<link rel="stylesheet" href="/css/home.css">
<body>

<% include partials/navbar %>



<div id="wrapper">

    <!-- Sidebar -->
    <% include partials/side %>

    <!-- Side navbar finished -->

    <div id="content-wrapper">
      <div style="padding-left:50px;padding-right: 50px;" class="container">
        <div class="row">
          <h1 id="name">Welcome <%=realname%></h1>
        </div>
        <br>
        <div class="row text-center">
        <% if(type == "setter") { %>
        
            <div class="card col-4">
                <div class="card-header raleway">Setter Control</div>
                <div class="card-main raleway">
                  <a href="/create"><button class="btn card-button raleway">Create Test</button></a>
                </div>
            </div>
          <% } %>
          <% if(testSchema.length == tests.length && type == "student") { %>
            <br>
            <div class="alert alert-danger" role="alert">
              No test available at this point!
            </div>
            <% } %>
          
          <% if(type == "student") { %>
          <% for (var i = 0; i < tests.length; i++) {%>
            <% if(testSchema.indexOf(tests[i].name) != -1) { continue; } %>
            <div class="card col-4">
              <div class="card-header raleway"><%= tests[i].name %></div>
              <div class="card-main">
                <a href="<%= '/test/'+ i.toString() %>"><button class="btn card-button raleway">Start Test</button></a>
                <div class="main-description raleway">Time : <%= Math.round(tests[i].time/60) %> hr <%= tests[i].time%60 %>min</div>
              </div>
            </div>
            <% } %>
            <% } %>
         
          </div>
          
      </div>
      
  </div>
</div>

<% include partials/footer %>